# Testing specific

snippet testfile
defmodule $1Test do
  use ExUnit.Case, async: true
  doctest $1

  test "$2" do
    $0
  end
end

endsnippet

snippet testc
test "$1", %{conn: conn} do
  $2
end

endsnippet

snippet test
test "$1" do
  $2
end

endsnippet

# Non-testing specific

snippet ip
IO.puts $1
endsnippet

snippet ii
IO.inspect $1
endsnippet

snippet defm
defmodule $1 do
  $0
end

endsnippet

snippet def
def $1 do
  $0
end

endsnippet

snippet defd
@doc """
$1
"""
def $2 do
  $0
end

endsnippet

snippet defo
def $1, do: $0

endsnippet

snippet defp
defp $1 do
  $0
end

endsnippet

snippet rec
receive do
  $0
end

endsnippet

snippet doc
@doc """
$1
"""
$0
endsnippet

snippet sl
$1.start_link(__MODULE__, $0)
endsnippet

snippet case
case $1 do
  $0
end
endsnippet

snippet gscall
GenServer.call($1)
endsnippet

snippet gscast
GenServer.cast($1)
endsnippet

snippet gsinfo
GenServer.info($1)
endsnippet
